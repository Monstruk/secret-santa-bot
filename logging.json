{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "standard",
            "level": "DEBUG"
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "standard",
            "level": "DEBUG",
            "encoding": "utf8",
            "filename": "logs/bot.log",
            "maxBytes": 1048576,
            "backupCount": 500
        }
    },
    "loggers": {
        "": {
            "handlers": [
                "console",
                "file"
            ],
            "propagate": false,
            "level": "DEBUG"
        },
        "pyrogram": {
            "level": "WARNING"
        }
    },
    "formatters": {
        "short": {
            "format": "[%(name)s][%(levelname)s] >>> %(message)s"
        },
        "standard": {
            "format": "[%(asctime)s][%(name)s:%(lineno)d][%(funcName)s][%(levelname)s] >>> %(message)s"
        },
        "filename": {
            "format": "[%(asctime)s][%(filename)s:%(lineno)d][%(levelname)s] >>> %(message)s"
        },
        "long": {
            "format": "[%(asctime)s][%(name)s][%(pathname)s:%(funcName)s:%(lineno)d][%(levelname)s] >>> %(message)s"
        }
    }
}
